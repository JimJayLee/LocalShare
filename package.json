{
  "name": "localshare",
  "type": "module",
  "version": "1.0.0",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "tsc -p tsconfig.node.json && vite build",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "build": {
    "appId": "com.localshare.app",
    "productName": "LocalShare",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns",
      "identity": null
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/png/512x512.png"
    }
  },
  "dependencies": {
    "archiver": "^7.0.1"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.3.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "antd": "^5.15.1",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
