{
  "name": "localshare",
  "type": "module",
  "version": "1.0.8",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "tsc -p tsconfig.node.json && vite build",
    "preview": "vite preview",
    "test:build": "node scripts/test-build.js",
    "analyze": "node scripts/analyze-size.js",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "keywords": ["electron", "file-sharing", "local-network", "desktop-app"],
  "author": "LocalShare Team",
  "license": "MIT",
  "description": "A simple and easy-to-use local network file sharing tool built with Electron",
  "build": {
    "appId": "com.localshare.app",
    "productName": "LocalShare",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns",
      "identity": null,
      "hardenedRuntime": false,
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "compression": "maximum",
      "artifactName": "${productName}-${version}-${arch}-mac.${ext}",
      "extendInfo": {
        "CFBundleDisplayName": "LocalShare",
        "CFBundleExecutable": "LocalShare",
        "CFBundleIdentifier": "com.localshare.app",
        "CFBundleName": "LocalShare",
        "CFBundleShortVersionString": "${version}",
        "CFBundleVersion": "${version}"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "compression": "maximum",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/png/512x512.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "synopsis": "A simple and easy-to-use local network file sharing tool",
      "description": "LocalShare enables quick file sharing between devices on the same network without complex configuration. Built with Electron for cross-platform compatibility.",
      "maintainer": "LocalShare Team <localshare@example.com>",
      "vendor": "LocalShare Team",
      "desktop": {
        "Name": "LocalShare",
        "Comment": "Local network file sharing tool",
        "Keywords": "file-sharing;network;local;transfer",
        "StartupNotify": "true"
      },
      "deb": {
        "compression": "xz",
        "priority": "optional",
        "depends": []
      },
      "rpm": {
        "compression": "xz"
      },
      "AppImage": {
        "compression": "maximum",
        "systemIntegration": "ask",
        "license": "LICENSE",
        "excludeFiles": [
          "*.map",
          "node_modules/.cache/**/*"
        ]
      }
    },
    "publish": null,
    "forceCodeSigning": false,
    "electronVersion": "29.4.6"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "formidable": "^3.5.4"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.3.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "antd": "^5.15.1",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "terser": "^5.28.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
